<Window x:Class="AvaloniaApplication2.MainWindow"
         xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:local="clr-namespace:AvaloniaApplication2"
         Title="AvaloniaApplication2"
         Width="800" Height="450">
	<StackPanel Margin="10" Background="Gray">
		<TextBlock Text="Список товаров" FontSize="25" Margin="5" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBlock Text="Введите название товара" FontSize="14" Margin="50,5,100,2" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBox Name="NameBox" Watermark="Название" Width="250" Margin="1" Background="LightGray" Foreground="Black" FontSize="14"/>
		<TextBlock Text="Введите цену товара" FontSize="14" Margin="18,5,100,0" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBox Name="PriceBox" Watermark="Оценка" Width="250" Margin="5" Background="LightGray" Foreground="Black" FontSize="14"/>
		<TextBlock Text="Введите количество товара" FontSize="14" Margin="65,5,100,0" FontWeight="Bold" HorizontalAlignment="Center"/>
		<TextBox Name="CountBox" Watermark="Количество" Width="250" Margin="5" Background="LightGray" Foreground="Black" FontSize="14"/>
		<Button Name="AddProductButton" Content="Добавить " HorizontalAlignment="Center" HorizontalContentAlignment="Center"   Width="180" Margin="5"
                 Click="AddProductButton_Click" Background="Black" Foreground="WhiteSmoke" FontSize="14"/>
		<Button Name="ShowProductButton" Content="Показать все"  Width="180" HorizontalContentAlignment="Center" Click="ShowProductsButton_Click" HorizontalAlignment="Center"
                 Background="Black" Foreground="WhiteSmoke" FontSize="14"/>
	</StackPanel>
</Window>